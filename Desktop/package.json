{
  "name": "banka-desktop",
  "version": "1.0.3",
  "description": "banka-desktop",
  "author": "rui",
  "repository": "https://github.com/figueiredorui/BankA2.git",
  "license": "MIT",
  "main": "main.js",
  "devDependencies": {
    "electron": "^1.4.15",
    "electron-builder": "^19.8.1"
  },
  "dependencies": {
    "electron-log": "^1.3.0",
    "electron-updater": "^1.4.2",
    "electron-is-dev": "^0.1.2"
  },
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "electron .",
    "dist": "build --win -p always"
  },
  "build": {
    "appId": "banka-desktop",
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "extraResources": {
      "from": "api/",
      "to": "api",
      "filter": [
        "**/*"
      ]
    },
    "mac": {
      "category": "banka-desktop"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "perMachine": true
    },
    "publish": [
      {
        "provider": "github",
        "token": "999586a21f0b1ddeeb01458a4af88c97653c47ef"
      }
    ]
  }
}